{
  "extends": [
    "@tsconfig/recommended",
    "@tsconfig/node18",
    "@tsconfig/esm",
    "@tsconfig/strictest"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,

    "exactOptionalPropertyTypes": false
  },
  "ts-node": {
    "typeCheck": false,
    "transpileOnly": true
  }
}
